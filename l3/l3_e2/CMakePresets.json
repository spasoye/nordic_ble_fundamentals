{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "build",
            "displayName": "Build for Pro Micro nRF52840",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "BOARD": "promicro_nrf52840/nrf52840/uf2",
                "EXTRA_CONF_FILE": "boards/nrf52840dongle_nrf52840.conf",
                "CONF_FILE": "prj.conf",
                "EXTRA_DTC_OVERLAY_FILE": "boards/nrf52840dongle_nrf52840.overlay",
                "DTC_OVERLAY_FILE": "boards/nrf52840dongle_nrf52840.overlay",
                "BOARD_FLASH_RUNNER": "jlink",
                "BOARD_DEBUG_RUNNER": "jlink"
            }
        }
    ]
}